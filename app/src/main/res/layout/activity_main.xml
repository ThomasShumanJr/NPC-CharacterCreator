<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/background_color">

    <TextView
            android:layout_width="275dp"
            android:layout_height="60dp"
            android:text="NPC Generator:"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.121"
            android:fontFamily="@font/amethysta" android:textSize="36sp" android:textColor="#5F5F5F"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/randomBtn"/>
    <Button
            android:text="Occupation"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:id="@+id/jobbtn"
            app:layout_constraintTop_toBottomOf="@+id/addPerBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>
    <Button
            android:text="Race"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:id="@+id/racebtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="270dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Personality"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:id="@+id/perBtn"
            app:layout_constraintTop_toBottomOf="@+id/addRaceBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>
    <Button
            android:text="Randomize All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/randomBtn"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <EditText
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/newRaceTxt"
            android:textColor="#00E3FE" android:fontFamily="@font/amethysta" android:hint="add new race here..."
            app:layout_constraintStart_toEndOf="@+id/addRaceBtn" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/raceTxt"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/newPerTxt"
            android:textColor="#00E3FE" android:fontFamily="@font/amethysta"
            android:hint="add new Personality here..." app:layout_constraintStart_toEndOf="@+id/addPerBtn"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/perTxt"/>
    <EditText
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/newJobText"
            android:textColor="#00E3FE" android:fontFamily="@font/amethysta" android:hint="add new Occupation here"
            app:layout_constraintStart_toEndOf="@+id/addJobBtn" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/jobTxt"/>
    <Button
            android:text="Add Race"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:id="@+id/addRaceBtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/racebtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Add Personailty"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:id="@+id/addPerBtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/perBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Add Occupation"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:id="@+id/addJobBtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/jobbtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Low Noble (High Class)"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:id="@+id/jobTxt" android:textColor="#00E3FE"
            android:textSize="18sp" android:fontFamily="@font/amethysta"
            app:layout_constraintStart_toEndOf="@+id/jobbtn" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/newPerTxt"
            app:layout_constraintHorizontal_bias="0.0"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:id="@+id/perTxt" android:textColor="#00E3FE"
            android:text="Friendly" android:textSize="18sp" android:fontFamily="@font/amethysta"
            app:layout_constraintStart_toEndOf="@+id/perBtn" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/newRaceTxt"
            android:textAlignment="center" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Human"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:id="@+id/raceTxt" android:textColor="#00E3FE"
            android:textSize="18sp" android:fontFamily="@font/amethysta"
            app:layout_constraintStart_toEndOf="@+id/racebtn" android:layout_marginStart="8dp"
            android:textAlignment="center" android:textStyle="bold" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="270dp"
            app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>